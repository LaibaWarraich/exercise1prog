<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXListView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.fhcampuswien.fhmdb.HomeController" style="-fx-background-color: #000000;">
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="42.0" spacing="20.0" style="-fx-background-color: black;">
         <padding>
            <Insets bottom="7.0" left="10.0" top="7.0" />
         </padding>
         <children>
            <Label style="-fx-background-color: F5C518;" text="FHMDb">
               <font>
                  <Font name="Calibri Bold" size="24.0" />
               </font>
               <padding>
                  <Insets left="2.0" right="2.0" />
               </padding>
            </Label>
            <Label styleClass="text-white" text="Welcome to FHMDb!" />
         </children>
      </HBox>
   </top>
   <left>
      <!-- Hamburger-Button -->
      <HBox alignment="TOP_LEFT" prefHeight="42.0" spacing="20.0" style="-fx-background-color: black;">
         <padding>
            <Insets bottom="7.0" left="10.0" top="7.0" />
         </padding>
      </HBox>

      <!-- Navigationsleiste -->
      <VBox fx:id="menuPane" spacing="10" style="-fx-background-color: white; visibility: hidden">
         <!-- Navigation content -->
         <JFXButton styleClass="menu-item" stylesheets="@styles.css" text="Home" onAction="#showHome" />
         <JFXButton styleClass="menu-item" stylesheets="@styles.css" text="Watchlist" onAction="#showWatchlist" />
      </VBox>
   </left>
   <center>
      <VBox spacing="5.0" styleClass="background-black" stylesheets="@styles.css">
         <children>
            <HBox spacing="5.0">
               <JFXButton fx:id="sortBtn" styleClass="background-yellow" stylesheets="@styles.css" text="Sort (asc)" />
               <TextField fx:id="searchField" prefHeight="25.0" prefWidth="170.0" promptText="Search FHMDb" />
               <JFXComboBox fx:id="genreComboBox" focusColor="#f5d600" styleClass="filter-combo-box" stylesheets="@styles.css" />
               <JFXComboBox fx:id="YearComboBox" focusColor="#f5d600" styleClass="filter-combo-box" stylesheets="@styles.css" />
               <JFXComboBox fx:id="RatingComboBox" focusColor="#f5d600" styleClass="filter-combo-box" stylesheets="@styles.css" />
               <JFXButton fx:id="searchBtn" styleClass="background-yellow" stylesheets="@styles.css" text="Filter" />
            </HBox>
            <JFXListView fx:id="movieListView" styleClass="background-black" stylesheets="@styles.css" VBox.vgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="20.0" left="10.0" top="20.0" />
         </padding>
      </VBox>
   </center>
   <right>
      <HBox prefHeight="5.0" spacing="5.0" style="-fx-background-color: black;">
         <padding>
            <Insets bottom="7.0" right="10.0" top="7.0" />
         </padding>
         <children>
            <JFXButton fx:id="menuButton" styleClass="hamburger-button" stylesheets="@styles.css" text="â˜°" onAction="#toggleMenu" />
         </children>
      </HBox>
   </right>
</BorderPane>




